@model Blibox.Articulo

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Articulos</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">


        <div class="box box-blibox box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">Detalle del Articulo</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->

            <div class="box-body">
                <form role="form">
                    <!-- text input -->
                    <div class="form-group ">
                        <div class="col-md-3">
                            <label>ID Articulo</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-certificate" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.ID_articulo, new { htmlAttributes = new { @class = "form-control ", @disabled = "" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Descripcion</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-file-text-o" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label>Cliente</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-id-badge" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Cliente.Razon_Social, new { htmlAttributes = new { @class = "form-control ", @disabled = "" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        
                        <div class="col-md-3">
                            <label>Costo</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-dollar" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Costo, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                            </div>
                        </div>
                    
                        <div class="col-md-3">
                            <label>Precio Lista</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-dollar" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Precio_lista, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label>Fecha del Precio</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Precio_fecha.ToString().Split(' ')[0], new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                             </div>
                         </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            <label>Cantidad por Bulto</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-cube" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Cant_x_bulto, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                            </div>
                            </div>
                        <div class="col-md-3">
                            <label>Tamaño por Caja</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-cube" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Tamaño_caja, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label>Toraje Term por hora</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-cube" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Tiraje_term_x_hora, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label>Tiraje Troquel por hora</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-cube" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.Tiraje_troquel_x_hora, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-md-3">
                            <label>Cantidad de Componentes</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-cogs" aria-hidden="true"></i></span>
                               
                                @Html.EditorFor(model => model.Componente.Count, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                             </div>
                            </div>
                        <div class="col-md-9">
                            <label>Observaciones</label>
                            @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
                            </div>
                    </div>
                    </form>
            </div>
            <!-- /.box-body -->
        </div>
         
