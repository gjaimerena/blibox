@model Blibox.Material

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Materiales</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form", @class = "form form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="box box-blibox box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">Nuevo Material</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div><!-- /.box-header -->

                <div class="box-body">
                    <div class="form-group">
                        <div class="dobleEntrada">
                            <label class="col-md-2 control-label">Descripción</label>
                            <div class="col-md-4">
                                @Html.EditorFor(
                                 model => model.Descripcion,
                                 new
                                 {
                                     htmlAttributes = new
                                     {
                                         @class = "form-control",
                                         @text = "text",
                                         @id = "Descripcion",
                                         data_fv_notempty_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ingresar la descripción",
                                         required = "required",
                                         data_fv_row = ".dobleEntrada",
                                         autofocus="autofocus"
                                     }
                                 })
                            </div>
                            </div>
                        <div class="dobleEntrada">
                            <label class="col-md-2 control-label no-clear-md">Peso</label>
                            <div class="col-md-4">
                                @Html.EditorFor(
                         model => model.Peso,
                         new
                         {
                             htmlAttributes = new
                             {
                                 @class = "form-control",
                                 @text = "text",
                                 @id = "Peso",
                                 data_fv_notempty_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ingresar el peso",
                                 data_fv_numeric_message = "<i class='glyphicon glyphicon-info-sign'></i> El peso debe ser numérico",
                                 required = "required",
                                 data_fv_row = ".dobleEntrada"
                             }
                         })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="dobleEntrada">
                            <label class="col-md-2 control-label">Observaciones</label>
                            <div class="col-md-4">
                                @Html.EditorFor(
                                 model => model.Observaciones,
                                 new
                                 {
                                     htmlAttributes = new
                                     {
                                         @class = "form-control",
                                         @text = "text",
                                         @id = "Observaciones",
                                         data_fv_stringlength_min_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ingresar las observaciones",
                                         data_fv_stringlength = "true",
                                         data_fv_stringlength_min = "0",
                                         data_fv_row = ".dobleEntrada"
                                     }
                                 })
                            </div>
                        </div>
                        <br />

                    </div>
                </div>
                </div>
            <div class="form-group">
                @Html.EditorFor(
                model => model.ID_material,
                new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control hidden",
                        @text = "hidden",
                        @id = "ID_material",
                    }
                })
                <input type="submit" value="Generar" class="btn btn-add" /> |
                <button type="button" class="btn btn-cancel ">@Html.ActionLink("Cancelar", "Index")</button>
            </div>
        }
    </section>
</div><!-- /.content-wrapper -->
<script type="text/javascript">
    validarForm('#form');
</script>