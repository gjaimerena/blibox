@model Blibox.Rubro

@{
    ViewBag.Title = "Edit";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-blibox box-solid">

            
                <div class="box-header with-border">
                    <h3 class="box-title">Rubros</h3>
                </div>
                <div class="box-body">


                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form", @class = "form form-horizontal" }))
            {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal" style="padding:10px; text-align:left;">
                            <h4>Edicion del Rubro</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ID_rubro)

                            <div class="form-group">
                                @Html.Label("Descripcion", htmlAttributes: new { @class = "control-label col-md-1" })
                                <div class="col-lg-4 input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                                    </div>
                                    @Html.EditorFor(model => model.Descirpcion, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Descirpcion, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-1" })
                                <div class="col-lg-4 input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                                    </div>
                                    @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-2">
                                    <input type="submit" value="Actualizar" class="btn btn-add" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
                <div>
                    <button type="button" class="btn btn-cancel ">  @Html.ActionLink("Volver", "Index")</button>
                </div>
</section>
</div><!-- /.content-wrapper -->