@model Blibox.Rubro

@{
    ViewBag.Title = "Delete";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("index","Rubros")"><i class="fa fa-dashboard"></i> Rubros</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-blibox box-solid">


            <div class="box-header with-border">
                <h3 class="box-title">¿Desea eliminar el rubro?</h3>
            </div>
            <div class="box-body">
                <form class="form-horizontal" style="padding:10px;">
                   

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Id Rubro</label>
                        <div class="col-md-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                            </div>
                            <input class="form-control" placeholder="@Html.DisplayFor(model => model.ID_rubro)" readonly />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Descripcion</label>
                        <div class="col-md-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                            </div>
                            <input class="form-control" placeholder="@Html.DisplayFor(model => model.Descirpcion)" readonly />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Observaciones</label>
                        <div class="col-md-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                            </div>
                            <input class="form-control" placeholder="@Html.DisplayFor(model => model.Observaciones)" readonly />
                        </div>
                    </div>

                </form>
                </div>
                <br />
            </div>


            @*<h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Rubro</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Descirpcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Descirpcion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Observaciones)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Observaciones)
                        </dd>

                    </dl>


                </div>*@

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    <button type="button" class="btn btn-cancel ">@Html.ActionLink("Volver", "Index")</button>
                </div>
            }
    </section>

</div><!-- /.content-wrapper -->