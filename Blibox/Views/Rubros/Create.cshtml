@model Blibox.Rubro

@{
    ViewBag.Title = "Create";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Rubros")"><i class="fa fa-dashboard"></i> Rubros</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-blibox box-solid">

            <div class="box-header with-border">
                <h3 class="box-title">Crear rubro</h3>
            </div>
            <div class="box-body">
               @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form", @class = "form form-horizontal" }))
               {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal" style="padding:10px;">
                        <div class="form-group">
                            <div class="dobleEntrada">
                                @Html.Label("Descripcion", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i></div>
                                        @Html.EditorFor(
                    model => model.Descirpcion,
                    new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            @id = "Descripcion",
                            data_fv_notempty_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ingresar la Descripcion",
                            required = "required",
                            data_fv_row = ".dobleEntrada",
                            autofocus = "autofocus"
                        }
                    })
                                    </div>
                                </div>
                            </div>

                            <div class="dobleEntrada">
                                @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-2 no-clear-md" })
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></div>
                                        @Html.EditorFor(
                    model => model.Observaciones,
                    new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            @id = "Observaciones",
                             
                            data_fv_row = ".dobleEntrada",

                            data_fv_stringlength_message = "<i class='glyphicon glyphicon-info-sign'></i> Observaciones no válido",
                            data_fv_stringlength_min = 0,
                            data_fv_stringlength = "true"
                        }
                    })
                                    </div>
                                </div>
                            </div>
                        </div>

                        

                        <div class="form-group">
                            <div class="col-md-2">
                                <input type="submit" value="Generar" class="btn btn-add" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div>
                <button type="button" class="btn btn-cancel">@Html.ActionLink("Volver", "Index")</button>
        </div>
</section>
</div><!-- /.content-wrapper -->
<script type="text/javascript">
    validarForm('#form');
    //inicializarDatePicker('#fechaPrecioLista', false, false);
</script>