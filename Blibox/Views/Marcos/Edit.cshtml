@model Blibox.Marco

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Cortantes</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-blibox box-solid">

            <div class="box-header with-border">
                <h3 class="box-title">Marcos</h3>
            </div>
            <div class="box-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form", @class = "form form-horizontal" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ID_marco)
                    <div class="form-group">
                        <div class="dobleEntrada">
                            <label class="col-md-2 control-label">Descripcion</label>
                            <div class="col-md-4">
                                @Html.EditorFor(
                                    model => model.Descripcion,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @text = "text",
                                            @id = "descripcion",
                                            data_fv_notempty_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ingresar la descripcion",
                                            required = "required",
                                            data_fv_row = ".dobleEntrada"
                                        }
                                    })
                            </div><!-- /.col -->
                        </div>
                        <div class="dobleEntrada">
                            <label class="col-md-2 control-label no-clear-md">Ancho</label>
                            <div class="col-md-4">
                                @Html.EditorFor(
                                    model => model.Ancho,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            //@type = "float",
                                            @id = "ancho",
                                            data_fv_notempty_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ingresar el ancho",
                                            required = "required",
                                            data_fv_numeric_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ser numerico",
                                            data_fv_numeric_decimalseparator = ",",
                                            data_fv_numeric = "true",
                                            data_fv_row = ".dobleEntrada"
                                        }
                                    })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="dobleEntrada">
                            <label class="col-md-2 control-label no-clear-md">Largo</label>
                            <div class="col-md-4">
                                @Html.EditorFor(
                                    model => model.Largo,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            //@type= "float",
                                            @id = "largo",
                                            data_fv_notempty_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ingresar el largo",
                                            required = "required",
                                            data_fv_numeric_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ser numerico",
                                            data_fv_numeric_decimalseparator = ",",
                                            data_fv_numeric = "true",
                                            data_fv_row = ".dobleEntrada"
                                        }
                                    })
                            </div>
                        </div>
                        <div class="dobleEntrada">
                            <label class="col-md-2 control-label no-clear-md">Observaciones</label>
                            <div class="col-md-4">
                                @Html.EditorFor(
                                    model => model.Observaciones,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @text = "text",
                                            @id = "observaciones",
                                            data_fv_stringlength_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ingresar las observaciones",
                                            data_fv_stringlength_min = "0",
                                            data_fv_stringlength = "true",
                                            data_fv_row = ".dobleEntrada"
                                        }
                                    })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2">
                                <input type="submit" value="Actualizar" class="btn btn-new" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div>
            <button type="button" class="btn btn-cancel">@Html.ActionLink("Volver", "Index")</button>
        </div>
    </section>
</div><!-- /.content-wrapper -->
<script type="text/javascript">
    validarForm('#form');
</script>