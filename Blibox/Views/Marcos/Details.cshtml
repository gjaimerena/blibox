@model Blibox.Marco


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Marcos")"><i class="fa fa-dashboard"></i> Marcos</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-default">
            <form class="form-horizontal" style="padding:10px;">
                <h4> Detalle del marco</h4>
                <hr />
                <div class="form-group">
                    <label class="col-sm-1 control-label">Id Marco</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.ID_marco)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">Descripcion</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Descripcion)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">Ancho</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-arrows-h" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Ancho)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">Largo</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-arrows-v" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Largo)" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">Observaciones</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Observaciones)" readonly />
                    </div>
                </div>


            </form>
            <br />
        </div>

        <p>
            <button type="button" class="btn btn-info ">@Html.ActionLink("Editar", "Edit", new { id = Model.ID_marco })</button> |
            <button type="button" class="btn btn-info ">@Html.ActionLink("Volver", "Index")</button>
        </p>

    </section>
</div><!-- /.content-wrapper -->
