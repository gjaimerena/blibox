@model Blibox.Cliente

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Detalle")"><i class="fa fa-dashboard"></i> Cliente</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">


        <div class="box box-default">
            <form class="form-horizontal" style="padding:10px;">
                <h4> Detalle del vendedor</h4>
                <hr />

                <div class="form-group">
                    <label class="col-sm-2 control-label">Razon Social</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Razon_Social)" readonly />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">CUIT</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.CUIT)" readonly />

                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-2 control-label">Domicilio</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-home fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Domicilio)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Localidad</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-home fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Localidad)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Provincia</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-home fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Provincia)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Codigo postal</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-home fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Codigo_Postal)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Telefono</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-phone fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Telefono)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Email</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-envelope fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Email)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Rubro</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Rubro.Descirpcion)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Limite Credito</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-money fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Limite_credito)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">IVA</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            %
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.IVA)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Fecha Alta</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Fecha_alta)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Vendedor</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-user fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Vendedor.ID_vendedor)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Comision vendedor</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-user fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Comision_vendedor)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Saldo</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-money fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Saldo)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Referidos</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Referidos)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Dias FF</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.DiasFF)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Dias Cheque</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Dias_Cheque)" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Grupo mailing</label>
                    <div class="col-md-4 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-envelope fa-fw" aria-hidden="true"></i>
                        </div>
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Grupo_mailing)" readonly />

                    </div>
                </div>

            </form>
            <br />
        </div>

        <p>
            <button type="button" class="btn btn-info ">@Html.ActionLink("Editar", "Edit", new { id = Model.ID_cliente })</button> |
            <button type="button" class="btn btn-info ">@Html.ActionLink("Volver", "Index")</button>
        </p>



       
    </section>
</div><!-- /.content-wrapper -->