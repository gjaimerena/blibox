@model Blibox.Matriz

@{
    ViewBag.Title = "Edit";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-default">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal" style="padding:10px; text-align:left;">
                    <h4>Edicion de datos de la matriz</h4>
                    <hr />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID_matriz)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-lg-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                            </div>
                            @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-lg-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                            </div>
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Sector, htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-lg-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                            </div>
                            @Html.EditorFor(model => model.Sector, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Sector, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Bocas, htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-lg-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                            </div>
                            @Html.EditorFor(model => model.Bocas, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bocas, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-lg-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                            </div>
                            @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-1">
                            <input type="submit" value="Actualizar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
            </div>
            <div>
                <button type="button" class="btn btn-primary ">  @Html.ActionLink("Volver", "Index")</button>
            </div>
</section>
</div><!-- /.content-wrapper -->