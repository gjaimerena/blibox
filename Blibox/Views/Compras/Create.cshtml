                        //}
                    }
                },
                id_cliente: {
                    validators: {
                        stringLength: {
                           
                        }
                        //notEmpty: {
                        //    message: 'El campor es requerido'
                        //}
                    }
                },
                tipoMovimiento: {
                    validators: {
                        stringLength: {
                           
                        }
                        //notEmpty: {
                        //    message: 'El campor es requerido'
                        //}
                    }
                },
                
                concepto: {
                    validators: {
                        notEmpty: {
                            message: 'El campo es requerido'
                        }
                    }
                },
            },
           
        })
       
    
});
</script>