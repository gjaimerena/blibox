@model Blibox.Models.RegisterViewModel
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Roles")"><i class="fa fa-dashboard"></i> Cuentas de usuario</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        @Html.ActionLink("LISTADO DE ROLES", "Index","Roles", null, new { @class = "btn btn-addmore" }) | @Html.ActionLink("ADMINISTRAR ROLES DE USUARIO", "ManageUserRoles","Roles", null, new { @class = "btn btn-addmore" })

        <hr />
        <div class="row">

            <div class="col-md-6">
                <div class="box box-blibox box-solid">
                    <div class="box-header with-border">
                        <h3 class="box-title">Creación de nuevo usuario</h3>
                    </div>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    { @Html.AntiForgeryToken()
                       
                        <hr />
                        @Html.ValidationSummary()
                        <div class="box-body">
                            <div class="row form-group">
                                <div class="col-md-8">
                                    <label>Nombre de Usuario</label>
                                    @Html.TextBoxFor(m => m.UserName, null, new { @class = "form-control" })
                                </div>


                            </div>
                            <div class="row form-group">
                                <div class="col-md-8">
                                    <label>Contraseña</label>
                                    @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control" })
                                </div>


                            </div>
                            <div class="row form-group">
                                <div class="col-md-8">
                                    <label>Confirmar Contraseña</label>
                                    @Html.TextBoxFor(m => m.ConfirmPassword, null, new { @class = "form-control" })
                                </div>


                            </div>
                        </div>
                        <div class="box-footer">
                            <input type="submit" value="Aceptar" class="btn btn-add" />
                        </div>

                    }
                    </div>
                </div>
            </div>
