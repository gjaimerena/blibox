<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Roles")"><i class="fa fa-dashboard"></i> Cuentas de usuario</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        @{
            ViewBag.Title = "Create";
        }
        <h1>Creación de Roles</h1>
        @Html.ActionLink("LISTADO DE ROLES", "Index", null, new { @class = "btn btn-addmore" }) | @Html.ActionLink("ADMINISTRAR ROLES DE USUARIO", "ManageUserRoles", null, new { @class = "btn btn-addmore" })

       
        @*@Html.ActionLink("LISTADO DE ROLES", "Index") | @Html.ActionLink("ADMINISTRAR ROLES DE USUARIO", "ManageUserRoles")*@
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="row form-group">
                <div class="col-md-4">
                    <label>Nombre del Rol</label>

                    @Html.TextBox("RoleName", null, new { @class = "form-control", @placeholder = "Ingrese nombre del nuevo rol" })
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-add" />
            </div>

            



        }

       

    </section>
</div><!-- /.content-wrapper -->