@model Blibox.Proveedor

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Proveedor")"><i class="fa fa-dashboard"></i> Proveedores</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-blibox box-solid">

            <div class="box-header with-border">
                <h3 class="box-title">Editar Proveedor</h3>
            </div><!-- /.box-header -->

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form", @class = "form form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

               

                @Html.Partial("~/Views/Proveedor/CreateTemplate.cshtml")
                @Html.EditorFor(
                    model => model.ID_proveedor,
                    new
                    {
                        htmlAttributes = new
                        {
                            @class = "hidden",
                            @id = "ID_cliente",

                            data_fv_stringlength_message = "<i class='glyphicon glyphicon-info-sign'></i> Proveedor no válido",
                            data_fv_stringlength_min = 0,
                            data_fv_stringlength = "true"
                        }
                    })

            }
        </div>

        <div>
            <button type="button" class="btn btn-cancel">@Html.ActionLink("Volver", "Index")</button>
        </div>

    </section>
</div><!-- /.content-wrapper -->
