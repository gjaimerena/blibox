@model Blibox.Cortante

@{
    ViewBag.Title = "Editar";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("index","Cortantes")"><i class="fa fa-dashboard"></i> Cortantes</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-blibox box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">Cortantes</h3>
            </div>
            <div class="box-body">
                @*@using (Html.BeginForm())*@
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form", @class = "form form-horizontal" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ID_cortante)

                    <div class="form-group">
                        <div class="dobleEntrada">
                            @Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label col-md-1" })
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i></div>
                                    @Html.EditorFor(
                                    model => model.Codigo,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @id = "Codigo",
                                            data_fv_notempty_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ingresar un Codigo",
                                            required = "required",
                                            data_fv_row = ".dobleEntrada",
                                            autofocus = "autofocus"
                                        }
                                    })
                                </div>
                            </div>
                        </div>
                        <div class="dobleEntrada">
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label no-clear-md  col-md-1" })
                            <div class="col-md-4 ">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i></div>
                                    @Html.EditorFor(
                                    model => model.Descripcion,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @id = "Descripcion",
                                            data_fv_notempty_message = "<i class='glyphicon glyphicon-info-sign'></i> Debe ingresar una descripción",
                                            required = "required",
                                            data_fv_row = ".dobleEntrada",
                                        }
                                    })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="dobleEntrada">
                            @Html.LabelFor(model => model.Sector, htmlAttributes: new { @class = "control-label col-md-1" })
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i></div>
                                    @Html.EditorFor(
                                    model => model.Sector,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @id = "Sector",
                                            data_fv_stringLength = "true",
                                            data_fv_row = ".dobleEntrada",
                                        }
                                    })
                                </div>
                            </div>
                        </div>
                        <div class="dobleEntrada">
                            @Html.LabelFor(model => model.Bocas, htmlAttributes: new { @class = "control-label no-clear-md col-md-1" })
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i></div>
                                    @Html.EditorFor(
                                    model => model.Bocas,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @id = "Bocas",
                                            data_fv_stringLength = "true",
                                            data_fv_row = ".dobleEntrada",
                                        }
                                    })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="dobleEntrada">
                            @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-1" })
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i></div>
                                    @Html.EditorFor(
                                    model => model.Observaciones,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @id = "Observaciones",
                                            data_fv_stringLength = "true",
                                            data_fv_row = ".dobleEntrada",
                                        }
                                    })
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <input type="submit" value="Generar" class="btn btn-add" />
                        </div>
                    </div>
                }
            </div>
        </div>
        <div>
            <button type="button" class="btn btn-cancel">@Html.ActionLink("Volver", "Index")</button>
        </div>
    </section>
</div><!-- /.content-wrapper -->

<script type="text/javascript">
    validarForm('#form');
    //  inicializarDatePicker('#fechaAlta', false, false);
</script>