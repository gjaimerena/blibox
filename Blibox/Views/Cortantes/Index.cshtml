@model PagedList.IPagedList<Blibox.Cortante>
@using PagedList.Mvc;

@*@model IEnumerable<Blibox.Cortante>*@

@{
    ViewBag.Title = "Index";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">

        <p>
            <button type="button" class="btn btn-info ">@Html.ActionLink("NUEVO CORTANTE", "Create")</button>
        </p>

        @{ string currentFilter = ViewBag.CurrentFilter;
            string currentSort = ViewBag.CurrentSort;
            if (string.IsNullOrEmpty(currentSort))
            {
                currentSort = "id";
            } }

        <div class="search-box">
            <form class="form-inline">
                <div class="form-group">
                    <input type="text" name="q" value="@ViewBag.searchQuery" class="search-text form-control" placeholder="Search..." />
                </div>
                <button type="submit" class="btn btn-info">Buscar</button>
            </form>
        </div>
        <br />

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Cortantes</h3>
            </div>
            <table class="table table-bordered">
                <tr>
                    <th>@Html.DisplayName("ID cortante")</th>
                    <th>@Html.DisplayName("Codigo")</th>
                    <th>@Html.DisplayName("Descripcion")</th>
                    <th>@Html.DisplayName("Sector")</th>
                    <th>@Html.DisplayName("Bocas")</th>
                    <th>@Html.DisplayName("Observaciones")</th>
                    <th>OPCIONES</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.ID_cortante)</td>
                        <td>@Html.DisplayFor(model => item.Codigo)</td>
                        <td>@Html.DisplayFor(model => item.Descripcion)</td>
                        <td>@Html.DisplayFor(model => item.Sector)</td>
                        <td>@Html.DisplayFor(model => item.Bocas)</td>
                        <td>@Html.DisplayFor(model => item.Observaciones)</td>
                      
                        <td>
                            <button type="button" class="btn btn-primary ">@Html.ActionLink("Editar", "Edit", new { id = item.ID_cortante })</button> |
                            <button type="button" class="btn btn-primary ">@Html.ActionLink("Detalle", "Details", new { id = item.ID_cortante })</button> |
                            <button type="button" class="btn btn-primary ">@Html.ActionLink("Eliminar", "Delete", new { id = item.ID_cortante })</button>


                        </td>
                    </tr>
                }


            </table>
        </div>
        @if (Model.PageCount > 1)
        {
            <div class="pager">
                @Html.PagedListPager(Model, page => Url.Action("Index", new
           {
               page,
               sortOrder = ViewBag.currentSort,
               q = ViewBag.CurrentFilter
           }))
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            </div>
        }
      
    </section>
</div><!-- /.content-wrapper -->