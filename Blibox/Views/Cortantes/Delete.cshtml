@model Blibox.Cortante

@{
    ViewBag.Title = "Delete";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Message
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Cortantes")"><i class="fa fa-dashboard"></i> Cortantes</a></li>
            <li class="active">@ViewBag.Message</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">

        <div class="box box-blibox box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">¿Desea eliminar esta cortante?</h3>
            </div>
            <div class="box-body">
                <form class="form-horizontal" style="padding:10px;">
                   
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Id Cortante</label>
                        <div class="col-md-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                            </div>
                            <input class="form-control" placeholder="@Html.DisplayFor(model => model.ID_cortante)" readonly />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Codigo</label>
                        <div class="col-md-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                            </div>
                            <input class="form-control" placeholder="@Html.DisplayFor(model => model.Codigo)" readonly />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Descripcion</label>
                        <div class="col-md-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                            </div>
                            <input class="form-control" placeholder="@Html.DisplayFor(model => model.Descripcion)" readonly />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Sector</label>
                        <div class="col-md-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                            </div>
                            <input class="form-control" placeholder="@Html.DisplayFor(model => model.Sector)" readonly />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Bocas</label>
                        <div class="col-md-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                            </div>
                            <input class="form-control" placeholder="@Html.DisplayFor(model => model.Bocas)" readonly />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-1 control-label">Observaciones</label>
                        <div class="col-md-4 input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-database fa-fw" aria-hidden="true"></i>
                            </div>
                            <input class="form-control" placeholder="@Html.DisplayFor(model => model.Observaciones)" readonly />
                        </div>
                    </div>



                </form>
            </div>
                <br />
        </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <button type="button" class="btn btn-cancel ">@Html.ActionLink("Volver", "Index")</button>
                </div>
            }

    </section>
</div><!-- /.content-wrapper -->